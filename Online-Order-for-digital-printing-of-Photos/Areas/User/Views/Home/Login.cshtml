
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/UserLayout/_Layout.cshtml";
}

<div class="form-box">
    <div class="title" style="text-align: center; margin-bottom: 2.2em">
        <h2>LOGIN</h2>
    </div>
    <form class="registration-form" style="padding: 0 40% 0 40%;">
        <div class="row">
            <div class="col-md-12"><div class="field"><i class="far fa-user-circle"></i><input type="text" placeholder="UserName" /></div></div>
            <div class="col-md-12"><div class="field"><i class="ti-key"></i><input type="password" placeholder="Password" /></div></div>
            <div class="col-md-12"><div class="field field-button"><input type="submit" value="Login" /></div></div>
        </div>
    </form>
</div><!-- Login Form -->