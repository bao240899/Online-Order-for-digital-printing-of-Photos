@using Online_Order_for_digital_printing_of_Photos.Common
<header>
    <div class="container">
        <div class="header-container">
            <nav>
                <ul>
                    <li><a href="~/" title="">Home</a></li>
                    <li>
                        <a href="~/Image" title="">Images</a>
                    </li>
                </ul>
            </nav><!-- Navigation -->
            @{
                var session = (UserLogin)Session[Online_Order_for_digital_printing_of_Photos.Common.CommonConstant.USER_SESSION];

            }
            @if (session == null)
            {
                <div class="header-links">
                    <ul list-unstyled>
                        <li><a href="~/Home/Login" title="">Log in</a></li>
                        <li><a href="~/Home/SignUp" title="">Sign up</a></li>
                        <li><a href="~/Cart" title="">Cart (0)</a></li>
                    </ul>
                </div><!-- Header Links -->

            }
            else
            {
                <div class="header-links">
                    <ul style="list-unstyled">
                        <li><a href="~/Cart" title="">Cart (0)</a></li>
                        <li class="divider"></li>
                        <li>
                            <a role="menuitem" href="#"><i class="fa fa-user"></i> My Profile</a>
                        </li>
                        <li>
                            <a role="menuitem" href="~/Home/Logout"><i class="fa fa-power-off"></i> Logout</a>
                        </li>
                        
                    </ul>
                </div><!-- Header Links -->


                <div class="dropdown-menu">
                    <ul class="">
                        <li class="divider"></li>
                        <li>
                            <a role="menuitem" href="pages-user-profile.html"><i class="fa fa-user"></i> My Profile</a>
                        </li>
                        @*<li>
                                <a role="menuitem" tabindex="-1" href="#" data-lock-screen="true"><i class="fa fa-lock"></i> Lock Screen</a>
                            </li>*@
                        <li>
                            <a role="menuitem" href="pages-signin.html"><i class="fa fa-power-off"></i> Logout</a>
                        </li>
                        <li><a href="~/Cart" title="">Cart (0)</a></li>
                    </ul>
                </div>
            }
        </div>
    </div>
</header><!-- Header -->

<div class="responsive-header">
    <div class="responsive-bar">
        <span class="open-menu"><i data-target="menu" class="fa fa-align-center"></i></span>
        <div class="logo"><a href="~/" title=""><img src="~/Content/OnlineOrderForDigitalrintingOfPhotos/images/logo.png" alt="" /></a></div><!-- Logo -->
        <span class="open-links"><i data-target="links" class="fa fa-arrow-right"></i></span>
    </div>
    <div class="responsive-links menu">
        <ul>
            <li><a href="~/" title="">Home</a></li>
            <li class="">
                @*menu-item-has-children*@
                <a href="~/Image" title="">Images</a>
            </li>
            <li class="">
                @*menu-item-has-children*@
                <a href="~/Cart" title="">Cart</a>
            </li>
        </ul>
    </div>

    <div class="responsive-links other">
        <ul>
            <li><a href="~/Cart"><i class="fa fa-shopping-cart"></i>Cart (0)</a></li>
            <li><a href="~/Home/Login" title="">Log in</a></li>
            <li><a href="~/Home/SignUp" title="">Sign up</a></li>
        </ul>
    </div>
</div><!-- Responsive Header -->